@model List<MyBlogNight.EntityLayer.Concrete.Article>
@{
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
<div class="main-panel">
	<div class="content" style="margin-bottom:310px;">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">

					<div class="card">
						<div class="card-header">
							<div class="card-title">Yazılarım</div>
						</div>
						<div class="card-body">
							<table class="table table-head-bg-success">
								<thead>
									<tr>
                                        <th>Kullanıcı Id</th>
                                        <th>Başlık</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
										<th>Sil</th>
									</tr>
								</thead>
								<tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AppUserId</td>
                                            <td>@item.Title</td>
                                            <td>@item.CreatedDate.ToShortDateString()</td>
                                            <td><span class="badge bg-success">Aktif</span></td>
											<td><a href="~/Article/ArticleDetail/@item.ArticleId" class="btn btn-danger">Sil</a></td>
                                        </tr>
                                    }
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
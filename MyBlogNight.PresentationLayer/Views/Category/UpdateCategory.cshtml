@model Category
@{
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="main-panel">
    <div class="content" style="margin-bottom:310px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelle</div>
                        </div>
                        <div class="card-body">

                            <form method="post">
                                <input type="hidden" asp-for="CategoryId"/>
                                <label>Kategori Adı</label>
                                <input type="text" asp-for="CategoryName" class="form-control mb-2" />
                                <span class="text-danger mb-3" asp-validation-for="CategoryName"></span><br />
                                <button class="btn btn-primary">Kategori Ekle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
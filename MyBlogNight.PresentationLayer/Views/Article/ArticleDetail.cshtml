@model Article
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Blog Detay</title>
</head>
<body>
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="page-wrapper">
                        <div class="blog-title-area">
                            <ol class="breadcrumb hidden-xs-down">
                                <li class="breadcrumb-item"><a href="#">Blog</a></li>
                                <li class="breadcrumb-item"><a href="#">Blog Detay</a></li>
                                <li class="breadcrumb-item active">@Model.Title</li>
                            </ol>

                            <span class="color-yellow"><a href="marketing-category.html" title="">@Model.Category.CategoryName</a></span>

                            <h3>@Model.Title</h3>

                            <div class="blog-meta big-meta">
                                <small><a href="marketing-single.html" title="">@Model.CreatedDate.ToString("dd-MMM-yyyy")</a></small>
                                <small><a href="blog-author.html" title="">@Model.AppUser.Name @Model.AppUser.Surname</a></small>
                                <small><a href="#" title=""><i class="fa fa-eye"></i> @Model.ArticleViewCount</a></small>
                            </div><!-- end meta -->
                        </div><!-- end title -->

                        <div class="single-post-media">
                            <img src="@Model.CoverImageUrl" alt="" class="img-fluid">
                        </div><!-- end media -->

                        <div class="blog-content">
                            <div class="pp">
                                <p>@Model.Detail</p>
                            </div><!-- end pp -->
                        </div><!-- end content -->

                        <hr class="invis1">

                        <div class="custombox authorbox clearfix">
                            <h4 class="small-title">Yazar Hakkında</h4>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <img src="@Model.AppUser.ImageUrl" alt="" class="img-fluid rounded-circle">
                                </div><!-- end col -->

                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <h4><a href="#">@Model.AppUser.Name @Model.AppUser.Surname</a></h4>
                                    <p>@Model.AppUser.Description</p>

                                </div><!-- end col -->
                            </div><!-- end row -->
                        </div><!-- end author-box -->

                        <hr class="invis1">
                        @await Component.InvokeAsync("_CommentListWithByArticleIdComponentPartial")

                        <hr class="invis1">

                        <div class="custombox clearfix">
                            <h4 class="small-title">Yorum Yapın</h4>
                            <div class="row">
                                <div class="col-lg-12">
                                    <form class="form-wrapper">
                                        <input for="name" type="text" class="form-control" placeholder="Adınız">
                                        <input for="email" type="text" class="form-control" placeholder="Email Adresiniz">
                                        <textarea class="form-control" placeholder="Yorumunuz"></textarea>
                                        <button type="submit" class="btn btn-primary">Gönder</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div><!-- end page-wrapper -->
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
        </section>

    </div>
</body>
</html>
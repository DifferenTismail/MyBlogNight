@using MyBlogNight.PresentationLayer.Helper
@model List<Comment>
<div class="custombox clearfix">
    <h4 class="small-title">Son Yorumlar</h4>
    <div class="row">
        <div class="col-lg-12">
            <div class="comments-list">
                @foreach (var item in Model)
                {
                    <div class="media align-items-center mb-4">
                        <div class="media-left mr-3">
                            <img src="@item.AppUser.ImageUrl" alt="" class="rounded-circle" style="width: 50px; height: 50px;">
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading user_name">
                                @item.AppUser.Name @item.AppUser.Surname:
                                <small>@item.CreatedDate.TimeAgo()</small>
                            </h4>
                            <p>@item.CommentDetail</p>
                            <a href="#" class="btn btn-primary btn-sm">Oku</a>
                        </div>
                    </div>
                }
            </div>
        </div><!-- end col -->
    </div><!-- end row -->
</div><!-- end custom-box -->
